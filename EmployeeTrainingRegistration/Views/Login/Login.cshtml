
<!doctype html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Styles/Login/LoginPage.css" rel="stylesheet" />
    <script src="~/js/LoginValidation.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
</head>
<body>
  
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="#">
                <span>or use your email for registration</span>
                <input type="text" placeholder="Name" />
                <input type="email" placeholder="Email" />
                <input type="password" placeholder="Password" />
                <button>Sign Up</button>
            </form>
        </div>

        <div class="form-container sign-in-container">

            <form action="@Url.Action("Verify", "Login")" method="post" onsubmit="return validateForm()">
                <h1>LOG IN</h1>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div id="errorMessages" style="color: red;">
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
                }
                <input type="text" name="Email" placeholder="Enter your Email" required />
                <input type="password" name="Password" placeholder="Enter your Password" required />
                <a href="#">Forgot your password?</a>
                <button>Log In</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left"></div>
                <div class="overlay-panel overlay-right">
                    <h1>Don't have an Account?</h1>
                    <p>Register Now!</p>
                    <a href="@Url.Action("Register", "Register")" class="registerButton" id="signUp">Register</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



<!doctype html>
<head>
    <title>Register</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Styles/Register/RegisterPage.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/js/RegisterValidation.js"></script>
    <script src="~/js/ManagerDropdown.js"></script>
</head>
<html>
<body>
    <div id="toaster" class="toaster">
        <p id="toasterMessage"></p>
    </div>


    <div class="container" id="container">
        <form id="registerForm" action="@Url.Action("AddAccount", "Register")" method="post" onsubmit="return validateRegisterForm()">
            <h1>REGISTER</h1>
            <div id="errorMessages" style="color: red;"></div>
            <label class="label" for="name">First Name:</label>
            <input type="text" class="form-control" placeholder="Enter First Name" name="FirstName">
            <label class="label" for="name">Last Name:</label>
            <input type="text" class="form-control" placeholder="Enter Last Name" name="LastName">
            <label class="label" for="name">Mobile Number</label>
            <input type="text" class="form-control" placeholder="Enter Mobile Number" name="MobileNumber">
            <label class="label" for="name">National Identity Card </label>
            <input type="text" class="form-control" placeholder="Enter NIC" name="NationalIdentityCard">

            <label for="department" class="label">Department:</label>
            <select id="department" name="DepartmentName" class="form-control dd">
                <option value="Product and Technology">Product and Technology</option>
                <option value="Customer Support">Customer Support</option>
                <option value="Human Resource">Human Resource</option>
                <option value="Other">Other</option>
            </select>

            <label for="manager" class="label">Manager:</label>
            <select id="manager" name="ManagerName" class="form-control dd"></select>

            <label class="label" for="name">Email:</label>
            <input type="text" name="Email" placeholder="Enter your Email" />
            <label class="label" for="name">Password:</label>
            <input type="password" name="Password" placeholder="Enter your Password" />
            <button>Register</button>
        </form>

    </div>
</body>
</html>

